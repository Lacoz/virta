{
  "name": "@virta/mcp-server",
  "version": "0.0.1",
  "description": "MCP server exposing Virta pipelines as tools for LLM agents",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "bin": {
    "virta-mcp": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run --config vitest.config.mts",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "@virta/core": "workspace:*",
    "@virta/registry": "workspace:*",
    "@virta/planner": "workspace:*",
    "@virta/asl": "workspace:*",
    "@virta/arazzo": "workspace:*",
    "@virta/bpmn": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}

